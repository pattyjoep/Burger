<h1>Burgers!</h1>
<div class="jumbotron">
  <div class="row">
    <div class="col-md-6">
        <img src="assets/img/hamburger.png">
    </div>
    <div class="col-md-6">
      <h2>Add a Burger</h2>
        <form class="create-form">
          <div class="form-group">
            <label for="burger">Burger Name:</label>
            <input type="text" id="burger" name="burger_name">
          </div>
          <div class="form-group">
            <input type="radio" name="devoured" value="0"> Not Devoured?<br>  
          </div>
          <button class="btn btn-primary submit" type="submit">Add Burger</button>
        </form>
    </div>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-md-6">
      <table class="table table-dark">
        <thead>
          <tr>
            <th scope="col">ID</th>
            <th scope="col">Burger Name</th>
            <th scope="col"></th>
          </tr>
        </thead>
          <tbody>
                {{#each burgers}}
                  {{#unless devoured}}
                    {{> burgers/burgers-block}}
                  {{/unless}}
                {{/each}}
          </tbody>
      </table> 
    </div>
    <div class="col-md-6">
      <table class="table table-dark">
          <thead>
            <tr>
              <th scope="col">ID</th>
              <th scope="col">Burger Name</th>
              <th scope="col"></th>
            </tr>
          </thead>
          <tbody>
              {{#each burgers}}
                {{#if devoured}}
                  {{> burgers/burgers-devoured}}
                {{/if}}
              {{/each}}
          </tbody>
      </table>
    </div>
  </div>
</div>